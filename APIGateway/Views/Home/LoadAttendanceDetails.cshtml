
@{
    ViewData["Title"] = "Attendance Details";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>
               Id
            </th>
            <th>
                Student Name
            </th>
            <th>
                AttendencePercentage
            </th>
            <th>
                AttendencePercentage
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in (dynamic)(ViewData["attendanceDetails"])) {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.StudentName
            </td>
            <td>
                @item.AttendencePercentage
            </td>
            <td>
                @item.StudentStatus
            </td>
            <td>
                <a asp-controller="Home" asp-action="CalcAttendenceStatus" asp-route-id="@item.Id">Show Status</a>
            </td>
        </tr>
}
    </tbody>
</table>
